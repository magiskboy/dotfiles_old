function get_pyenv_version() {
    python -V 2>&1 | sed 's/.* \([0-9]\).\([0-9]\)\(.*\)/\1.\2\3/'
}

function is_background_job() {
    if [[ ! -z `jobs` ]]; then
        echo '*'
    fi
}

function cd() {
    if [[ ! -z $VIRTUAL_ENV ]]; then
        deactivate 2> /dev/null
    fi
    builtin cd "$@"
    # auto detect and interactive virtualenv
    local FILE
    for FILE in `find . -maxdepth 1 -type d -name "*$PYENV_EXTENSION"`; do
        [ -f $FILE\/bin\/activate ] && source $FILE\/bin\/activate && return
    done
}
