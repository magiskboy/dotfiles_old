export ZSH="$HOME/.oh-my-zsh"

ZSH_THEME="nkthanh"

plugins=(
  git
  git-prompt
  git-auto-fetch
  gitignore
  pipenv
  pyenv
  django
  virtualenv
  mvn
  docker
  vi-mode
  jsontools
  transfer
  timer
  zsh-autosuggestions
  zsh-syntax-highlighting
)

source $ZSH/oh-my-zsh.sh
[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

# Don't create __pycache__ folder
export PYTHONDONTWRITEBYTECODE=1

export PYENV_ROOT="$HOME/.pyenv"
export PATH="$PYENV_ROOT/bin:$PATH"

# Allowing for pipenv to use pyenv
export PIPENV_PYTHON="$PYENV_ROOT/shims/python"
export VIRTUAL_ENV_DISABLE_PROMPT=1

# Setting java and maven
export JAVA_HOME=/usr/lib/jvm/java-8-openjdk-amd64
export JRE_PATH=/usr/lib/jvm/java-8-openjdk-amd64/jre
export M2_HOME=$HOME/.local/apache-maven-3.6.1
export M2=$M2_HOME/bin
export PATH=$M2:$PATH
export PATH=$JAVA_HOME/bin:$PATH

# Setting language and encoder
export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8

alias genssl="openssl req -x509 -nodes -days 365 -newkey rsa:2048 -keyout cert.key -out cert.crt"
alias -s {yml,yaml,ts,jsx,html,txt,c,cpp,java,go,md,json,Dockerfile,gitignore,dockerignore,zsh}=nvim
alias reload="exec \"$SHELL\""
alias md="mkdir"
alias rmwp="find . -type f -name '*.py' -exec sed -i '' 's/[[:space:]]\{1,\}$//' {} \+"
alias fzf="fzf --preview=\"bat {} --color=always\""
alias f='fzf'

eval "$(pyenv init -)"
eval "$(pipenv --completion)"

function get_pyenv_version() {
    python -V 2>&1 | sed 's/.* \([0-9]\).\([0-9]\)\(.*\)/\1.\2\3/'
}

function is_background_job() {
    if [[ ! -z `jobs` ]]; then
        echo '*'
    fi
}

# export PATH=$HOME/anaconda3/bin:$PATH
#

fortune -n 50 | cowsay
